<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <!-- 定义日志的输出位置 -->
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

    </Appenders>

    <!-- 定义日志级别和日志输出 -->
    <Loggers>
        <!-- 根日志配置 -->
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>